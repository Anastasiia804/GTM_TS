# Server Configuration
PORT=3000
NODE_ENV=production

# Your Domain
DOMAIN=https://tsprtg.com

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-$(openssl rand -base64 32)

# Database Configuration (if using MongoDB or PostgreSQL)
# DATABASE_URL=mongodb://localhost:27017/tag-manager
# DATABASE_URL=postgresql://user:password@localhost:5432/tag-manager

# CORS Configuration
ALLOWED_ORIGINS=https://tsprtg.com,https://www.tsprtg.com,https://admin.tsprtg.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Container Script Configuration
CONTAINER_SCRIPT_DOMAIN=https://tsprtg.com

# Optional: Analytics/Logging
# ANALYTICS_ENDPOINT=https://analytics.tsprtg.com
# LOG_LEVEL=info
