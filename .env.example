# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration (if using MongoDB or PostgreSQL)
# DATABASE_URL=mongodb://localhost:27017/tag-manager
# DATABASE_URL=postgresql://user:password@localhost:5432/tag-manager

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Container Script Configuration
CONTAINER_SCRIPT_DOMAIN=https://yourdomain.com

# Optional: Analytics/Logging
# ANALYTICS_ENDPOINT=https://analytics.yourdomain.com
# LOG_LEVEL=info
